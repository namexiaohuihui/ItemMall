<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lemonchiffon"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/user_xxxxxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/guest"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:layout_margin="@dimen/itme_5dp"/>
        <TextView
            android:id="@+id/user_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:layout_gravity="center"
            android:text="多么痛的领悟呀"
            android:textColor="@color/black"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_margin="2dp"
    android:background="@color/mistyrose"/>

    <!--列表布局不设置ID是不会有相应的效果-->
    <ListView
        android:id="@+id/user_num"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/mistyrose"
        android:dividerHeight="2dp"
        android:fadingEdge="none"
        android:scrollbars="horizontal|none"
        android:layout_marginBottom="20dp"/>

</LinearLayout>
