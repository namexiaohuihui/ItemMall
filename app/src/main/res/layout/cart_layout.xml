<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cart_imageview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/itme_10dp"
            android:adjustViewBounds="true"
            android:padding="@dimen/itme_10dp"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/axiulou" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/itme_10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cart_layout_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/itme_10dp"
                    android:layout_marginTop="@dimen/itme_10dp"
                    android:text="标题"
                    android:textColor="@color/black"
                    android:textSize="@dimen/itme_18sp" />

                <TextView
                    android:id="@+id/cart_layout_xianjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/itme_10dp"
                    android:layout_marginTop="@dimen/itme_10dp"
                    android:text="现价"
                    android:textColor="@color/red"
                    android:textSize="@dimen/itme_24sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/cart_layout_jian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:maxHeight="30dp"
                        android:maxWidth="30dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/jian" />

                    <TextView
                        android:id="@+id/cart_layout_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/itme_5dp"
                        android:layout_marginRight="@dimen/itme_5dp"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="@dimen/itme_18sp" />
                    <ImageButton
                        android:id="@+id/cart_layout_jia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:layout_gravity="center_vertical"
                        android:maxHeight="30dp"
                        android:maxWidth="30dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/jia" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/cart_layout_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/product_dot"
                    android:text="购买"
                    android:layout_gravity="center|bottom"
                    android:layout_marginRight="@dimen/itme_10dp"
                    android:layout_marginBottom="@dimen/itme_5dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
